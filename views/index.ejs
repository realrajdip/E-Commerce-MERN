<%- include('./partials/header') %>

<div class="flex flex-col md:flex-row w-full h-screen">
    <div class="w-full md:w-1/2 flex items-center justify-center h-screen p-10 md:p-20">
        <div class="w-full md:w-4/5 lg:w-3/5">
            <h3 class="text-3xl md:text-4xl">welcome to <span class="text-blue-400 font-semibold">Scatch</span></h3>
            <h4 class="text-xl md:text-2xl mb-5">create your account</h4>
            <form autocomplete="off" action="/users/register" method="post">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-2 rounded-md mb-3 border-zinc-200 focus:outline-none focus:ring focus:border-blue-500"
                    type="text" placeholder="Full Name" name="fullname">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-2 rounded-md mb-3 border-zinc-200 focus:outline-none focus:ring focus:border-blue-500"
                    type="email" placeholder="Email" name="email">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-2 rounded-md mb-3 border-zinc-200 focus:outline-none focus:ring focus:border-blue-500"
                    type="password" placeholder="Password" name="password">
                <input class="px-5 py-3 mt-2 w-full md:w-auto rounded-full bg-blue-500 text-white" type="submit"
                    value="Create My Account">
            </form>
        </div>
    </div>
    <div class="w-full md:w-1/2 flex items-center justify-center h-screen p-10 md:p-20">
        <div class="w-full md:w-4/5 lg:w-3/5">
            <h4 class="text-xl md:text-2xl capitalize mb-5">login to your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-2 rounded-md mb-3 border-zinc-200 focus:outline-none focus:ring focus:border-blue-500"
                    type="email" placeholder="Email" name="email">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-2 rounded-md mb-3 border-zinc-200 focus:outline-none focus:ring focus:border-blue-500"
                    type="password" placeholder="Password" name="password">
                <input class="px-5 py-3 mt-2 w-full md:w-auto rounded-full bg-blue-500 text-white" type="submit"
                    value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
