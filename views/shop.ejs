<%- include('./partials/header') %>
<div class="w-full min-h-screen flex flex-col lg:flex-row items-start px-4 py-4 lg:px-10 lg:py-10 bg-gray-100">
    <div class="w-[15%] lg:w-[10%] flex flex-col items-start p-2 lg:p-4 bg-white shadow-lg rounded-lg h-auto lg:min-h-[80vh] lg:max-h-screen overflow-y-auto mb-6 lg:mb-0">
        <div class="flex items-center mb-4 w-full">
            <h3 class="font-semibold text-base lg:text-sm mr-2">Sort by:</h3>
            <form action="/shop" class="flex-grow">
                <select class="border border-gray-300 px-2 py-1 rounded w-full text-sm" name="sortby" id="">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        <div class="flex flex-col mt-2 lg:mt-4 w-full">
            <h4 class="font-semibold text-base lg:text-sm mb-2">Categories</h4>
            <a class="block mb-1 text-blue-600 hover:underline text-sm" href="">New Collection</a>
            <a class="block mb-1 text-blue-600 hover:underline text-sm" href="">All Products</a>
            <a class="block mb-1 text-blue-600 hover:underline text-sm" href="">Discounted Products</a>
        </div>
        <div class="mt-4 lg:mt-8 w-full">
            <h4 class="font-semibold text-base lg:text-sm mb-2">Filters</h4>
            <a class="block mb-1 text-blue-600 hover:underline text-sm" href="">Availability</a>
            <a class="block mb-1 text-blue-600 hover:underline text-sm" href="">Discount</a>
        </div>
    </div>
    <div class="w-[85%] lg:w-[90%] flex flex-col gap-8 h-auto lg:h-full overflow-auto p-4 lg:p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% products.forEach(function(product){ %>
                <div class="w-full border border-gray-200 rounded-lg overflow-hidden shadow-lg bg-white">
                    <div class="w-full h-52 flex items-center justify-center" style="background-color: <%= product.bgcolor %>;">
                        <img class="h-[12rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                    </div>
                    <div class="flex justify-between items-center px-4 py-4" style="background-color: <%= product.panelcolor %>; color: <%= product.textcolor %>;">
                        <div>
                            <h3 class="text-xl font-semibold">
                                <%= product.name %>
                            </h3>
                            <h4 class="text-lg">â‚¹ <%= product.price %></h4>
                        </div>
                        <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white shadow-lg hover:bg-gray-100 transition" href="">
                            <i class="ri-add-line text-gray-700"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>
